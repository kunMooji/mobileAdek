<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="top"
        android:background="@drawable/bg_atas"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bawah"/>

    <!-- Profile Picture Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="75dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/imgProfilePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <!-- Profile Info Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Name -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama"
                android:text="Brilian Hilmi"
                android:textSize="16sp"
                android:textColor="#000"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/rounded_et"
                android:enabled="false"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:text="brilian@example.com"
                android:textSize="16sp"
                android:textColor="#000"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/rounded_et"
                android:enabled="false"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />

            <!-- Phone -->
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No Telepon"
                android:text="No Telepon: +628123456789"
                android:textSize="16sp"
                android:textColor="#000"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/rounded_et"
                android:enabled="false"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />

            <!-- Address -->
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat"
                android:text="Alamat: Jl. Kemerdekaan No. 123"
                android:textSize="16sp"
                android:textColor="#000"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/rounded_et"
                android:enabled="false"
                android:padding="10dp"
                android:layout_marginBottom="24dp" />

            <!-- Edit and Save Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnEditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="#FF5252"
                    android:backgroundTint="@android:color/white"
                    android:layout_marginEnd="16dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btnSaveProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:textColor="#FFF"
                    android:backgroundTint="@color/hijau_button"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:enabled="false" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
